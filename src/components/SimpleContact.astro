---

<div>
  <!-- FORM BEGIN -->
  <form class="tattoo-inquiry-form" action="/form" method="POST" data-netlify="true" name="tattoo-inquiry">
    <input type="hidden" name="contact" value="tattoo-inquiry" />
    <div class="md:flex items-center mt-12">
      <div class="w-full md:w-1/2 flex flex-col">
        <input
          placeholder="Name"
          required
          type="text"
          id="name"
          name="name"
          class="leading-none p-3 focus:outline-none focus:border-blue-700 border-2 rounded"
        />
      </div>
      <div class="w-full md:w-1/2 flex flex-col md:ml-6">
        <input
          required
          type="tel"
          id="phone"
          name="phone"
          class="leading-none text-black p-3 focus:outline-none focus:border-blue-700 border-2 rounded"
        />
      </div>
    </div>
    <div class="md:flex items-center mt-8">
      <div class="w-full flex flex-col">
        <input
          required
          type="email"
          id="email"
          name="email"
          class="leading-none text-black p-3 focus:outline-nonefocus:border-blue-700 border-2 rounded"
        />
      </div>
    </div>
    <div>
      <div class="w-full flex flex-col mt-8">
        <textarea
          required
          id="message"
          name="message"
          class="h-40 text-base leading-none text-black p-3 focus:outline-none focus:border-blue-700 border-2 rounded"
        ></textarea>
      </div>
    </div>
    <div data-netlify-recaptcha="true" class="flex justify-center"></div>
    <div class="flex items-center justify-center w-full">
      <button
        type="submit"
        class="mt-9 font-semibold leading-none text-white py-4 px-10 bg-blue-800 rounded hover:bg-blue-700 focus:ring-2 focus:ring-offset-2 focus:ring-blue-800 focus:outline-none"
      >
        Send message
      </button>
    </div>
  </form>
</div>
